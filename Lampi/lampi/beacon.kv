<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Character'
            on_press: app.root.current = 'character'
        Button:
            text: 'Shop'
            on_press: app.root.current = 'shop'
        Button:
            text: 'Search'
            on_press: app.root.current = 'search'
<CharacterScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Bilbo Baggins'
        Label:
            text: 'Attack: 10'
        Label:
            text: 'HP: 100'
        Button:
            text: 'Home'
            on_press: app.root.current = 'home'
<ShopScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Weapon Shop'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Greatsword'
