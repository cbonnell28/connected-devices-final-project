<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Character'
            on_press:
                app.root.current = 'character'
        Button:
            text: 'Shop'
            on_press: app.root.current = 'shop'
        Button:
            text: 'Search'
            on_press:
                app.root.current = 'search'
<CharacterScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Bilbo Baggins'
        Label:
            text: root.get_character_health()
        Label:
            text: root.get_character_attack()
        Button:
            text: 'Home'
            on_press: app.root.current = 'home'
<ShopScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Weapon Shop'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Greatsword'
                Label:
                    text: '100 gold'
            Button:
                text: 'Buy'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Fire Staff'
                Label:
                    text: '50 gold'
            Button:
                text: 'Buy'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Steel Armor'
                Label:
                    text: '200 gold'
            Button:
                text: 'Buy'
        Button:
            text: 'Home'
            on_press: app.root.current = 'home'
<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Available Beacons'
        BoxLayout:
            Label:
                text: 'Davids Beacon'
            Button:
                text: 'Battle!'
                on_press: app.request_battle("b827eb1b49b0")
        BoxLayout:
            Label:
                text: 'Christians Beacon'
            Button:
                text: 'Battle!'
                on_press: app.request_battle("b827ebc460ad")
        Button:
            text: 'Home'
            on_press: app.root.current = 'home'
<WaitForResponseScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: "Please Wait"
        BoxLayout:
            Label:
                text: "Waiting for opponents response..."
<RespondToBattleRequestScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                Label:
                    text: "An opponent wants to Battle!"
            BoxLayout:
                Label:
                    text: "Do you accept their challenge?"
        BoxLayout:
            Button:
                text: "Yes"
                on_press: app.respond_to_challenge(app.get_opponent_id(), True) 
            Button:
                text: "No"
                on_press: app.respond_to_challenge(app.get_opponent_id(), False)
<BattleScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            BoxLayout
                Label:
                    text: "Orc HP: 100"
            BoxLayout:
                Label:
                    text: "HP: 100"

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Label:
                        text: "Bilbo Baggins"
                BoxLayout:
                    Label:
                        text: "HP: 100"
            BoxLayout:
                Button:
                    text: "Attack"
                Button:
                    text: "Flee"
                    on_press: app.root.current = 'home'
