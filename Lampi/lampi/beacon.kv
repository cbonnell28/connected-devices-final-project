                text: 'Buy'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Fire Staff'
                Label:
                    text: '50 gold'
            Button:
                text: 'Buy'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Steel Armor'
                Label:
                    text: '200 gold'
            Button:
                text: 'Buy'
        Button:
            text: 'Home'
            on_press: app.root.current = 'home'
